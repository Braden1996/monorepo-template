{
    "name": "monorepo-template",
    "private": true,
    "engines": {
        "node": "14.x"
    },
    "scripts": {
        "clean": "yarn workspaces foreach --parallel --topological --exclude '\\.' run clean && yarn run clean:build-cache",
        "clean:build-cache": "rimraf .build-cache",
        "build": "yarn workspaces foreach --parallel --topological run build",
        "test": "yarn workspaces foreach --parallel --topological run test",
        "pretest": "yarn workspaces foreach --parallel --topological run pretest",
        "pretest:typescript": "yarn workspaces foreach --parallel --topological run pretest:typescript",
        "pretest:lint": "yarn workspaces foreach --parallel --topological run pretest:lint",
        "pretest:lint:fix": "yarn workspaces foreach --parallel --topological run pretest:lint:fix"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.28.5",
        "@typescript-eslint/parser": "^4.28.5",
        "eslint": "7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-mysticatea": "^4.2.4",
        "eslint-plugin-prefer-object-spread": "^1.2.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-react-native": "^3.11.0",
        "npm-run-all": "4.1.5",
        "prettier": "^2.3.2",
        "pretty-quick": "^3.1.1",
        "rimraf": "3.0.2",
        "typescript": "4.3.5"
    },
    "resolutions": {
        "typescript": "4.3.5",
        "eslint": "7.32.0",
        "npm-run-all": "4.1.5",
        "rimraf": "3.0.2",
        "react-native": "https://github.com/expo/react-native/archive/sdk-42.0.0.tar.gz",
        "@types/react-native": "~0.63.2"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "applications/*"
        ]
    }
}
